<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h2>ユーザー情報変更</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% unless current_user.email == "score.club.staff@gmail.com" %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, :class => "input_text", autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :user_name, :class => "input_text" %>
      <br />
      <em>必須項目です</em>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :パスワード %> <br />
      <%= f.password_field :password, :class => "input_text", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %>文字以上入力してください</em>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, :class => "input_text", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :紹介文 %><br />
      <%= f.text_field :introduction, :class => "input_text" %>
    </div>

  <% end %>

  <div class="field">
    <%= f.label :プロフィール画像 %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "更新", :class => "btn-border" %>
  </div>
<% end %>
